@using KutuphaneSistem.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Yazarlar</title>
</head>
<h2>Yazarlar</h2>
<table class="table table-striped">
    <tr style="background-color:#f8b02e">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZAR KİTAPLARI</th>
    </tr>
    @foreach (var yzr in Model)
    {
        <tr>
            <td>@yzr.ID</td>
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td>
                @Html.ActionLink("SİL", "YazarSil", new { id = yzr.ID },
            new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })
            </td>
            <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-warning">GÜNCELLE</a></td>
            <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-default" style="background-color:Highlight; color:white">KİTAPLARI GÖRÜNTÜLE</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yazar Ekle</a>
