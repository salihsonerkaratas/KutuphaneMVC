@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 160px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 17px;
                color: #96969a;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 160px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Kitap/Index"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
        <a href="/Yazar/Index"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Uye/Index"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-modal-window"></i> &nbsp; Personeller</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Hareket/KitapVer/"><i class="glyphicon glyphicon-export"></i> &nbsp; Kitap Ver</a>
            <a href="/Hareket/Index/"><i class="glyphicon glyphicon-import"></i> &nbsp; Kitap Al</a>
        }
        <a href="/Istatistik/Index/"><i class="glyphicon glyphicon-stats"></i> &nbsp; İstatistikler</a>
        <a href="/Islem/Index/"><i class="glyphicon glyphicon-transfer"></i> &nbsp; İşlemler</a>
        <a href="/Vitrin/Galeri/"><i class="glyphicon glyphicon-picture"></i> &nbsp; Galeri</a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-th"></i> &nbsp; Vitrin</a>
        <a href="/Istatistik/Hava/"><i class="glyphicon glyphicon-cloud"></i> &nbsp; Hava Raporu</a>
        <a href="/Duyuru/Index/"><i class="glyphicon glyphicon-bell"></i> &nbsp; Duyurular</a>
        <a href="/Ayar/Index/"><i class="glyphicon glyphicon-cog"></i> &nbsp; Ayarlar</a>
        <a href="/AdminLogin/LogOut/"><i class="glyphicon glyphicon-off"></i> &nbsp; Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
