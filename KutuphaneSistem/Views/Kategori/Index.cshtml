@using KutuphaneSistem.Models.Entity
@model List<TBLKATEGORİ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Kategoriler</title>
</head>
<h2>Kategoriler</h2>
<table class="table table-striped">
    <tr style="background-color:#f8b02e">
        <th>SIRA</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.AD</td>
            <td><a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary" style="margin-bottom:10px">Kategori Ekle</a>
<a href="/Kategori/PasifKategori/" class="btn btn-warning" style="margin-bottom:10px">Pasif Kategoriler</a>
