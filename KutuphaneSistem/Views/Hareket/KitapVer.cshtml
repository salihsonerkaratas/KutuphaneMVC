@model KutuphaneSistem.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "KitapVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Kitap Ver</title>
</head>
<h2>Kitap İşlemleri</h2>

<form class="form-group" method="post">
    <br />
    <div>
        <label>Üye</label>
        @*@Html.TextBoxFor(u => u.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div><br />
    <div>
        <label>Kitap</label>
        @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLKİTAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div><br />
    <div>
        <label>Personel</label>
        @*@Html.TextBoxFor(p => p.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div><br />
    <div>
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIHI"
               value="@DateTime.Now.ToShortDateString()" />
    </div><br />
    <div>
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH"
               value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div><br />
    <div>
        <button class="btn btn-primary">Kitap Ver</button>
        <input type="hidden" value="false" name="ISLEMDURUM" />
    </div>
</form>
