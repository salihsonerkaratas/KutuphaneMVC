@using KutuphaneSistem.Models.Entity
@model List<TBLDUYURU>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}
<head>
    <title>Duyurular</title>
</head>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<h2>Duyurular</h2>
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>DUYURU NO</th>
        <th>KATEGORİ</th>
        <th>İÇERİK</th>
        <th>SİL</th>
        <th>TARİH</th>
    </tr>
    @foreach (var dyr in Model)
    {
        if (dyr.KATEGORI == "DİĞER")
        {
            renk = "bg-info text-white";
        }
        if (dyr.KATEGORI == "KİTAP")
        {
            renk = "bg-warning text-white";
        }
        if (dyr.KATEGORI == "İLETİŞİM")
        {
            renk = "bg-success text-white";
        }
        if (dyr.KATEGORI == "İADE")
        {
            renk = "bg-danger text-white";
        }
        <tr>
            <td>@dyr.ID</td>
            <td class="@renk">@dyr.KATEGORI</td>
            <td><a href="/Duyuru/DuyuruDetay/@dyr.ID" class="btn btn-default" style="background-color:yellowgreen; color:white ">DETAY</a></td>
            <td><a href="/Duyuru/DuyuruSil/@dyr.ID" class="btn btn-danger">SİL</a></td>
            <td>@Convert.ToDateTime(dyr.TARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>
<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Duyuru Ekle</a>
