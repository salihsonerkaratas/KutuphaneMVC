@using KutuphaneSistem.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Personeller</title>
</head>
<h2>Personeller</h2>
<table class="table table-striped">
    <tr style="background-color:#f8b02e">
        <th>ID</th>
        <th>PERSONEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID.</td>
            <td>@prs.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/ @prs.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Personel/PersonelGetir/ @prs.ID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary" style="margin-bottom:10px">Personel Ekle</a>
