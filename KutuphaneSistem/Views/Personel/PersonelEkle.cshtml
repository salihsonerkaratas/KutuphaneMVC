@model KutuphaneSistem.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Personel Ekle</title>
</head>
<form class="form-group" method="post">
    <br />
    <div>
        <label>Personel Adı-Soyadı</label>
        @Html.TextBoxFor(p => p.PERSONEL, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.PERSONEL, "", new { @style = "color:red" })
    </div><br />
    <div>
        <button class="btn btn-info" id="Btn1">Ekle</button>
    </div>
</form>

